# === CloudTab Environment Variables ===

# Database
DATABASE_URL=postgresql+asyncpg://cloudtab:cloudtab_dev@postgres:5432/cloudtab
DATABASE_URL_SYNC=postgresql+psycopg2://cloudtab:cloudtab_dev@postgres:5432/cloudtab

# Redis
REDIS_URL=redis://redis:6379/0

# Auth
SECRET_KEY=change-me-to-a-random-secret-key
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Encryption (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
ENCRYPTION_KEY=change-me-generate-with-fernet

# CORS
FRONTEND_URL=http://localhost:5173

# Admin user (seeded on first run)
ADMIN_EMAIL=admin@cloudtab.local
ADMIN_PASSWORD=changeme123

# Logging
LOG_LEVEL=INFO

# S3 Backup Storage (optional â€” only needed when backup storage_type is "s3")
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_REGION=us-east-1
# For MinIO or other S3-compatible services, set the endpoint URL:
# S3_ENDPOINT_URL=http://minio:9000
